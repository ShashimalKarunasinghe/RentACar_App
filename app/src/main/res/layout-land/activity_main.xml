<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Keep toolbar for the Sort menu, hide title (we show our own) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title=""
        app:menu="@menu/menu_main"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="0dp"
        android:paddingHorizontal="10dp">

        <!-- ===================== ROW 1 : Search + Credit + Dark ===================== -->

        <!-- ===================== ROW 2 : 3 Columns ===================== -->
        <LinearLayout
            android:id="@+id/rowTop"
            android:layout_width="705dp"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:iconifiedByDefault="false"
                android:queryHint="@string/search_hint" />

            <TextView
                android:id="@+id/tvCredit"
                style="@style/BadgeText"
                android:layout_width="97dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:text="@string/credit_initial"
                android:textAlignment="center"
                android:textSize="12sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/dark_mode" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rowTop"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp">

                <!-- Column guides (now with size attrs to silence lint) -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/g2_img_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="327dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/g2_heart_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.76" />

                <!-- Left: wide image (crop top/bottom) -->

                <!-- Middle: details + rating -->
                <ImageView
                    android:id="@+id/imgCar"
                    android:layout_width="297dp"
                    android:layout_height="129dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/car_image_desc"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="21:7"
                    app:layout_constraintEnd_toStartOf="@id/g2_img_right"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/middleDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/g2_heart_left"
                    app:layout_constraintStart_toEndOf="@id/g2_img_right"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvNameModel"
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_dash" />

                    <TextView
                        android:id="@+id/tvYearKm"
                        style="@style/BodyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/placeholder_dash" />

                    <TextView
                        android:id="@+id/tvDaily"
                        style="@style/BodyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:text="@string/placeholder_dash" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:scaleX="0.3"
                        android:scaleY="0.3"
                        android:stepSize="0.3" />

                </LinearLayout>

                <!-- Right: heart button -->
                <FrameLayout
                    android:id="@+id/heartBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/g2_heart_left"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/btnFav"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/favourite"
                        android:src="@drawable/ic_heart_outline" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ===================== ROW 3 : 2 Columns ===================== -->

        <!-- Bottom split (fav list | big buttons) -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g3_buttons_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.58" />

        <!-- Left: favourites -->
        <TextView
            android:id="@+id/lblFavs"
            style="@style/SectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favourites"
            app:layout_constraintEnd_toStartOf="@+id/colButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardMain" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavs"
            android:layout_width="400dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/colButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblFavs" />

        <!-- Right: two full-width rounded buttons (with symmetric padding) -->
        <LinearLayout
            android:id="@+id/colButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="0dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/g3_buttons_left"
            app:layout_constraintTop_toBottomOf="@id/cardMain">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:layout_marginBottom="16dp"
                android:text="@string/next"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRent"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:text="@string/rent"
                app:cornerRadius="32dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
